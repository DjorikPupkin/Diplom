<Page x:Class="ComService.Pages.DetPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComService.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DetPage">

    <Grid>
        <Grid.RowDefinitions>
            
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>


        <DataGrid Name="DGCompl" Margin="5" AutoGenerateColumns="False" CanUserAddRows="False" Grid.Row="0">

            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding DetailName}" Width="*"   Header="Комплектующие" ></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Quantity}" Width="*"   Header="Количество на складе" ></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
